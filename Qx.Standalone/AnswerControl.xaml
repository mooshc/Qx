<UserControl x:Class="Qx.Client.AnswerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" MouseDown="UserControl_MouseDown" KeyDown="UserControl_KeyDown"
             d:DesignHeight="27" MinHeight="22" FlowDirection="RightToLeft" MinWidth="110">
    <Grid Name="Grid">
        <StackPanel Orientation="Horizontal" Name="AnswerPanel" GotFocus="AnswerPanel_GotFocus" Mouse.PreviewMouseDown="AnswerPanel_PreviewMouseDown" MinWidth="110" />
    </Grid>
</UserControl>
