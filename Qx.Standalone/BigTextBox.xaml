<Window x:Class="Qx.Client.BigTextBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Deactivated="Window_Deactivated"
        Title="BigTextBox" ShowInTaskbar="False" Background="Transparent" WindowStyle="None" Topmost="True" PreviewLostKeyboardFocus="Window_PreviewLostKeyboardFocus"
        SizeToContent="WidthAndHeight" AllowsTransparency="True" MinHeight="25" MinWidth="200" FlowDirection="RightToLeft" HorizontalContentAlignment="Right">
    <Border BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.Background>
                <SolidColorBrush Color="White"/>
            </Grid.Background>
        
            <TextBox Name="Text" TextWrapping="Wrap" AcceptsReturn="True" MouseDoubleClick="Text_MouseDoubleClick" FlowDirection="RightToLeft" TextAlignment="Left" HorizontalAlignment="Left" Width="220" PreviewKeyDown="Text_KeyDown" />
            <!--<Label Content="לחץ פעמיים כדי לסגור\לפתוח חלון זה"  Foreground="Red" FontWeight="Bold" Grid.Row="1" MouseDoubleClick="Text_MouseDoubleClick" FontSize="11"/>-->
        </Grid>
    </Border>
</Window>
