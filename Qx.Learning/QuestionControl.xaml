<UserControl x:Class="Qx.Learning.QuestionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             Height="Auto" Background="#ebebeb" Margin="0,5,0,0" BorderBrush="Transparent" BorderThickness="1">
    <Grid FlowDirection="RightToLeft">
        <Grid.RowDefinitions>
            <RowDefinition Name="firstRow" Height="25px"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Name="QuestionLabel" FontWeight="Bold"/>
        <StackPanel Name="AnswersStackPanel" Grid.Row="1" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0"/>
    </Grid>
</UserControl>
