<Window x:Class="Qx.Admin.ScenarioAnswersOM"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:GUI="clr-namespace:Qx.Admin"
        xmlns:Controls="clr-namespace:Microsoft.Windows.Controls;assembly=WPFToolkit"
        Title="ScenarioAnswersOM" Height="300" Width="541">
    <Grid>
        <GUI:ScenarioAnswerOM AutoGenerateColumns="False" CanCreate="True" CanDelete="True" CanEdit="True" x:Name="DoctorAnswersGridControl">
            <GUI:ScenarioAnswerOM.Columns>
                <Controls:DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="*" />
                <Controls:DataGridTextColumn Header="Answer Name" Binding="{Binding AnswerName}" Width="*" />
                <Controls:DataGridTextColumn Header="Text" Binding="{Binding Text}" Width="*" />
                <Controls:DataGridTextColumn Header="Related Answer Name" Binding="{Binding RelatedAnswerName}" Width="*" />
            </GUI:ScenarioAnswerOM.Columns>
        </GUI:ScenarioAnswerOM>
    </Grid>
</Window>
