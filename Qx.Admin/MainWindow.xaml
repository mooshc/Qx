<Window x:Class="Qx.Admin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="250" Width="425">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Label Content="כניסת מנהל" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Label Content="שם משתמש" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center"/>
        <Label Content="סיסמה" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center"/>

        <TextBox Grid.Column="0" Grid.Row="1" Margin="25,10" TextAlignment="Right" FlowDirection="RightToLeft" Name="usernameTextBox" Width="150" Height="25" KeyDown="usernameTextBox_KeyDown" />
        <PasswordBox Grid.Column="0" Grid.Row="2" Margin="25,10" PasswordChar="*" FlowDirection="RightToLeft" Name="passwordTextBox" Width="150" Height="25" KeyDown="usernameTextBox_KeyDown" />

        <Button Content="כניסה" Grid.Row="3" Grid.ColumnSpan="2" HorizontalAlignment="Center" Width="86" Margin="10" Click="Button_Click" />
    </Grid>
</Window>
