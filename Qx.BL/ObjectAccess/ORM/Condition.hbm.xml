<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" namespace="Qx.Common" assembly="Qx.Common">
  <class name="Condition" table="`Condition`">

    <id name="ID">
      <generator class="identity" />
    </id>

    <property name="Name" />
    <property name="ConditionType" />
    <property name="Value" />
    <property name="SecondValue" />
    <property name="IsDeleted" />

    <many-to-one name="Color" column="ColorID" lazy="false" />

  </class>
</hibernate-mapping>
